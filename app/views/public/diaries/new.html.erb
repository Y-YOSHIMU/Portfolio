<div class="container">
	<div class="row">
		<h1>新規作成</h1>
	</div>

	<div class="row">
		<%= form_with model: @diary do |f| %>
			<div class="col-4">
				<div class="form-group">
					<%= f.label :image, "画像" %>
					<%= f.attachment_field :image %>
				</div>
				<div class="form-group">
					<%= f.label :"タイトル" %>
					<%= f.text_field :title %>
				</div>
				<div class="form-group">
					<%= f.label :"本文" %>
					<%= f.text_area :body %>
				</div>
				<div>
					<%= f.select :emotion_status, Diary.emotion_statuses.keys.map {|k| [I18n.t("enums.diary.emotion_status.#{k}"), k]} %>
				</div>
				<%= f.submit "投稿", class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>
</div>