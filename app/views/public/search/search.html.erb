<% if @diary_or_hashtag == "1" %>
	<h1>'<%= @search %>'の検索結果</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
			</tr>
		</thead>
		<tbody>
		<% @diaries.each do |diary| %>
			<tr>
				<td>
					<%= link_to diary_path(diary) do %>
						<%= diary.title %>
					<% end %>
				</td>
				<td><%= diary.body %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
	<%= paginate @diaries %>


<% elsif @diary_or_hashtag == "2" %>
	<h1>'<%= @search %>'の検索結果</h1>
	<table class="table">
			<thead>
				<tr>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
			<% @hashtags.each do |hashtag| %>
				<% hashtag.diary_hashtags.each do |hashtags| %>
				<tr>
					<td>
						<%= link_to diary_path(hashtags.diary) do %>
							<%= hashtags.diary.title %>
						<% end %>
					</td>
				</tr>
				<% end %>
			<% end %>
			</tbody>
	</table>
	<%= paginate @hashtags %>

<% end %>