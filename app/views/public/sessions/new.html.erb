<div class="form-container">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-container__field">
      <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %>
    </div>

    <div class="form-container__field">
      <%= f.password_field :password, placeholder: "パスワード" %>
    </div>

    <div class="form-container__actions">
      <%= f.submit "ログイン", class: 'btn btn-success btn-lg btn-block' %>
    </div>
  <% end %>

</div>