<h1>ようこそ<%= @user.nickname %>さん！</h1>
<%= link_to "日記投稿", new_diary_path %>

<%= link_to "お気に入り一覧", favorites_path %>

<div class="search">
<%= form_tag(search_path, :method => 'get') do %>
	<%= text_field_tag :search %>
	<%= select_tag(:option, options_for_select([["日記から探す", "1"],["ハッシュタグから探す", "2"]])) %>
	<%= select_tag(:choice, options_for_select([["部分一致", "1"],["完全一致", "2"]])) %>
	<%= submit_tag '検索', :name => nil %>
<% end %>
</div>
<div id="calendar" class="fc"></div>