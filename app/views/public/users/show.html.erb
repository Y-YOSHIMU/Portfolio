<h1 class="nickname">ようこそ<%= @user.nickname %>さん！</h1>

<div class="users-container">
	<div id="calendar" class="users-container__calendar"></div>

	<div class="users-container__sidebar">
		<div class="search">
			<h3>他の１日を探す</h3>
			<%= form_tag(search_path, :method => 'get') do %>
				<div class="search-group">
					<%= select_tag(:option, options_for_select([["日記から探す", "1"],["ハッシュタグから探す", "2"]])) %>
					<%= select_tag(:choice, options_for_select([["部分一致", "1"],["完全一致", "2"]])) %>
				</div>
				<div class="search-group">
					<%= text_field_tag :search, "", :placeholder =>"ハッシュタグから探す: #を入れずに検索" %>
					<button type="submit" class="search-button"><i class="fas fa-search"></i></button>
				</div>
			<% end %>
		</div>
		<div class="favorite">
			<%= link_to "お気に入り一覧", favorites_path, class: "btn btn-primary" %>
		</div>
	</div>
</div>

<span id="create-diary">
	<%= link_to new_diary_path do %>
		<%= image_tag 'public/create.png', alt: "新規投稿" %>
	<% end %>
</span>

